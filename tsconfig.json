{
  "compilerOptions": {
    "moduleResolution": "node",
    "rootDir": "src",
    "outDir": "public",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": false,
    "module": "ES2015",
    "target": "ES2015"
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules"]
}
